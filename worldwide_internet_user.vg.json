{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":"Number of internet user around the world in 2022",
    "width":1100,
    "height":450,
    "projection":{"type":"equalEarth"},
    "data":{
        "url": "https://raw.githubusercontent.com/limzying/FIT3179-Homework-Week9/main/ne_110m_admin_0_countries.json",
        "format":{"type":"topojson","feature":"ne_110m_admin_0_countries"}
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from":{
                "data":{
                    "url":"https://raw.githubusercontent.com/limzying/FIT3179-Homework-Week9/main/worldwide%20internet%20users%20-%20users.csv"
                },
                "key": "Country",
                "fields": ["Internet_users"]
            }
        }
    ],
    "mark":{"type":"geoshape"},
    "encoding": {
        "color":{
            "field":"Internet_users",
            "type":"quantitative",
            "scale":{"type":"log"}
        },
        "tooltip":[
            {"field":"properties.NAME","type": "nominal","title":"Country"},
            {"field":"Internet_users","type":"quantitative","title":"Number of internet users"}
        ]
    }
}